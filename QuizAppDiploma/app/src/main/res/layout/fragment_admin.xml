<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/admin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin username"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="admin@example.com"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/usersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/users"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/coursesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/courses"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/purple_700" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <GridLayout
        android:id="@+id/radioGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/usersRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users" />

        <RadioButton
            android:id="@+id/coursesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses" />

        <RadioButton
            android:id="@+id/lecturesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lectures" />

        <RadioButton
            android:id="@+id/quizzesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quizzes" />

        <RadioButton
            android:id="@+id/questionsRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions" />
    </GridLayout>


    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/purple_700" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/purple_700" />
    </LinearLayout>
</LinearLayout>