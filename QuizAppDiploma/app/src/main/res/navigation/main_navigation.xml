<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.quizappdiploma.fragments.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_lecturerFragment"
            app:destination="@id/lecturerFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_adminFragment2"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_studentFragment"
            app:destination="@id/studentFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.quizappdiploma.fragments.RegistrationFragment"
        android:label="RegistrationFragment" />
    <fragment
        android:id="@+id/studentFragment"
        android:name="com.example.quizappdiploma.fragments.StudentFragment"
        android:label="fragment_student"
        tools:layout="@layout/fragment_student" >
        <action
            android:id="@+id/action_studentFragment_to_biologyCourse"
            app:destination="@id/biologyCourse" />
    </fragment>
    <fragment
        android:id="@+id/lecturerFragment"
        android:name="com.example.quizappdiploma.fragments.LecturerFragment"
        android:label="fragment_lecturer"
        tools:layout="@layout/fragment_lecturer" />
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.quizappdiploma.fragments.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" />
    <fragment
        android:id="@+id/biologyCourse"
        android:name="com.example.quizappdiploma.fragments.courses.BiologyCourse"
        android:label="fragment_biology_course"
        tools:layout="@layout/fragment_biology_course" >
        <action
            android:id="@+id/action_biologyCourse_to_firstBioLecture"
            app:destination="@id/firstBioLecture" />
        <action
            android:id="@+id/action_biologyCourse_to_secondBioLecture"
            app:destination="@id/secondBioLecture" />
    </fragment>
    <fragment
        android:id="@+id/firstBioLecture"
        android:name="com.example.quizappdiploma.fragments.courses.lectures.FirstBioLecture"
        android:label="fragment_first_bio_lecture"
        tools:layout="@layout/fragment_first_bio_lecture" />
    <fragment
        android:id="@+id/secondBioLecture"
        android:name="com.example.quizappdiploma.fragments.courses.lectures.SecondBioLecture"
        android:label="fragment_second_bio_lecture"
        tools:layout="@layout/fragment_second_bio_lecture" />
</navigation>